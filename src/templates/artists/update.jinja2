{% extends "base.jinja2" %}
{% block head %}
  <!-- Artist js functions -->
  <script src="{{ url_for('/.static_file', filename='js/modal.js') }}"></script>
  <script src="{{ url_for('/.static_file', filename='js/artist.js') }}"></script>
{% endblock head %}
{% block body %}
  {% include "components/modal.jinja2" %}
  <h1 class="title is-4 is-spaced">Updating {{ artist.artist_names[0].artist_name if artist.artist_names }}</h1>
  {% include "artists/includes/names/list_item_name.jinja2" %}
  {% include "artists/includes/forms/artist.jinja2" %}
  <hr />
  <br />
  <center>
    <button class="button is-info" onclick="addLineUp({{ artist.id }})">Add new line up</button>
  </center>
  <br />
  <br />
  {% include "artists/includes/line_ups/list_artist_line_up.jinja2" %}
{% endblock body %}
